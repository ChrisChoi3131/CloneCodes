

extends base.pug

block content
  h3 #{errorMessage}
  form( method="POST")
    input(type="text" name="username" required placeholder="username" value=(loggedInUser.username) ? `${loggedInUser.username}` : "")
    input(type="text" name="email" required placeholder="email" value=(loggedInUser.email) ? `${loggedInUser.email}` : "")
    input(type="text" name="name" required placeholder="name" value=(loggedInUser.name) ? `${loggedInUser.name}` : "")
    input(type="text" name="location" placeholder="location" value=(loggedInUser.location) ? `${loggedInUser.location}` : "")
    input(type="submit")     
    if !loggedInUser.socialOnly
      hr
      a(href="change-password") Change password &rarr;       