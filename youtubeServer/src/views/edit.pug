extends base.pug

block content 
  h3 Change Title of video
  form( method="POST")
    input(type="text" name="title" value=`${video.title}` required)
    input(type="text" name="description" value=`${video.description}` required placeholder="description")
    input(type="text" name="hashtags" value=`${video.hashtags.join()}` required placeholder="seperated by ,")
    input(type="submit" value="Save")